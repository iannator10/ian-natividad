<!DOCTYPE html>
<html lang="en">
<%- include('partials/header') %>

<body>
    <div id="contactDom" class="contactDom">
        <div class="container">
            <div class="contact-main-container">
                <div class="contact-header">
                    <a href="/"><img src="/img/back.png"></a>
                    <h1>{{ title }}</h1>
                </div>
                <div class="contact-body">
                    <form>
                        <div class="form-group">
                            <label for="emailInput">Email address</label>
                            <input type="email" class="form-control" id="emailInput" aria-describedby="emailHelp"
                                v-model="email">
                            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                                else.</small>
                        </div>
                        <div class="form-group">
                            <label for="subjectInput">Subject</label>
                            <input type="text" class="form-control" id="subjectInput" aria-describedby="Subject"
                                v-model="subject">
                        </div>
                        <div class="form-group">
                            <label for="messageInput">Message</label>
                            <textarea class="form-control textarea" id="messageInput" rows="6"
                                v-model="message"></textarea>
                        </div>
                    </form>
                </div>
                <div class="contact-footer">
                    <button type="submit" class="btn btn-primary" v-on:click="submit">Submit</button>
                    <div v-show="isSubtMessage" class="submit-message">
                        <p>{{ submitMessage }}</p>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <script src="/js/contact.js"></script>
</body>

</html>